{
  "exclude": ["dist"],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "es2022",
    "target": "ES2022",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
